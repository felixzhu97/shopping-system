{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
