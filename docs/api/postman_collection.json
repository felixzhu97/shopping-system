            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shippingAddress\": {\n    \"address\": \"收货地址\",\n    \"city\": \"城市\",\n    \"postalCode\": \"邮编\",\n    \"country\": \"国家\"\n  },\n  \"paymentMethod\": \"支付方式\",\n  \"orderItems\": [\n    {\n      \"productId\": \"产品ID\",\n      \"quantity\": 2\n    }\n  ]\n}",
